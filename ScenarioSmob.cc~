#include <guile/gh.h>
#include "Advent.hh"
#include "Scenario.hh"
#include "ScenarioSmob.hh"

long ScenarioSmob::tag;

struct ScenarioSmobStruct
{
  Scenario* scenario;
};

void 
ScenarioSmob::init ()
{
  tag = scm_make_smob_type ("ScenarioSmob", // How is this used?
			    sizeof (ScenarioSmobStruct));
  gh_new_procedure1_0("scenario:make-bind", &ScenarioSmob::make_bind);
}

SCM
ScenarioSmob::make_bind (SCM name)
{
  ScenarioSmobStruct* obj = (ScenarioSmobStruct*)scm_must_malloc (sizeof (ScenarioSmobStruct),
								  "ScenarioSmobStruct");
  obj->scenario = new Scenario ();
  current_scenario = obj->scenario;
  SCM_RETURN_NEWSMOB (tag, obj);
}

/* EOF */
